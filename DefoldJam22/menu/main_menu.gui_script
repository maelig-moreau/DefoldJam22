function on_message(self, message_id, message, sender)
	if message_id == hash("proxy_loaded") then
		print("lol")
		msg.post(sender, "init")
		msg.post(sender, "enable")
	elseif message_id == hash("next_level") then
		local node = gui.get_node("start")
		gui.animate(node, "rotation.z", 0, gui.EASING_INOUTELASTIC, 0.2,0,anim_end)
		gui.animate(node, "scale", vmath.vector3(1,1,1), gui.EASING_INOUTELASTIC, 0.2)
		gui.set_text(gui.get_node("text"), "NEXT")
		msg.post("loader#level"..self.level, "unload")
		self.level = self.level + 1
		self.inMenu = true
	elseif message_if == hash("proxy_unloaded") then
		print("unloaded")
		--msg.post("#level"..self.level, "load")
	end
end

function on_input(self, action_id, action)
	if action_id == hash("lclick") or action_id == hash("start") or action_id == hash("jump") then
		local node = gui.get_node("start")
		if self.inMenu then
			msg.post("loader#level"..self.level, "load")
			self.inMenu = false
		end
		gui.animate(node, "rotation.z", 360, gui.EASING_INOUTELASTIC, 0.2,0,anim_end)
		gui.animate(node, "scale", vmath.vector3(0,0,0), gui.EASING_INOUTELASTIC, 0.2)
	end
end