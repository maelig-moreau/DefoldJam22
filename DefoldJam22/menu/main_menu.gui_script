function init(self)
	msg.post(".", "acquire_input_focus")
	msg.post("/loader", "acquire_input_focus")
	self.level = 1
	self.inMenu = true
	msg.post("@render:", "clear_color", { color = vmath.vector4(0.2, 0.4, 0.9, 0) } )
	sound.play("#music")
end

