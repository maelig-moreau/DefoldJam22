go.property("speed", "5")

function init(self)
	CELL_SIDE = 25
	msg.post(".","acquire_input_focus")
	self.buffer = nil
	self.currentMovement = vmath.vector3(0,0,0)
	self.moving = false
	self.speed = 5
	self.facingRight = true
	self.gridCoords = vmath.vector3(5,5,0)
	self.movingTo = vmath.vector3()
end

local function grid_to_real(vector3)
	return vmath.vector3(vector3.x*CELL_SIDE,vector3.y*CELL_SIDE,0)
end

local function is_grounded()
	-- will contain all verifications needed in the future
	local bool = true
	if go.get_position().y > 50 then bool = false end
	return bool
end

