local function move_finished(self)
	self.gridCoords = self.movingTo
	self.overrideProtection = false
	if self.buffer == nil then
		self.moving = false
	else
		go.animate(".", "position", go.PLAYBACK_ONCE_FORWARD, grid_to_real(self.buffer), go.EASING_LINEAR, 0.1,0,move_finished)
	end
	
end

local function call_move(self,target)
	if is_grounded() == false then
		target.y = target.y - 1
	end
	self.movingTo = target
	if self.moving then
		self.buffer = target
		go.set_position(grid_to_real(target),go.get_id("/visual_buffer"))
	else
		self.moving = true
		self.buffer = nil
		go.animate(".", "position", go.PLAYBACK_ONCE_FORWARD, grid_to_real(target), go.EASING_LINEAR, 0.1,0,move_finished)
	end
end


