function on_input(self, action_id, action)
	local pPos = go.get_position()
	
	if action.pressed or self.overrideProtection == false then
		print(action_id)
		if action_id == hash("left") then
			self.overrideProtection = false
			local target = self.gridCoords
			target.x = target.x - 1
			call_move(self, target)
			self.facingRight = false
		elseif action_id == hash("right") then
			self.overrideProtection = false
			local target = self.gridCoords
			target.x = target.x + 1
			self.facingRight = true
		end
	end
	
	if action_id == hash("jump") and is_grounded() then
		self.overrideProtection = true
		local target = self.gridCoords
		target.y = target.y + 3
		target.x = target.x - 1
		if self.facingRight then
			target.x = pPos.x + 1
		end
		call_move(self, target)
	end
end

